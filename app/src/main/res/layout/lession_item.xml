<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:paddingStart="@dimen/lesson_item_layout_transparent_padding_start"
    android:paddingTop="@dimen/lesson_item_layout_transparent_padding_top"
    android:paddingEnd="@dimen/lesson_item_layout_transparent_padding_start"
    android:paddingBottom="@dimen/lesson_item_layout_transparent_padding_top">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/lesson_item_layout_conor">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lesson_layout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/lesson_item_color"
            android:orientation="horizontal"
            android:padding="@dimen/lesson_item_layout_padding">

            <ImageView
                android:id="@+id/img_lesson"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:contentDescription="@string/lesson_img_description"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toTopOf="@+id/hor_guide_9"
                app:layout_constraintEnd_toStartOf="@+id/ver_guide_25"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hor_guide_1" />

            <TextView
                android:id="@+id/tv_lesson_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                app:layout_constraintBottom_toTopOf="@+id/tv_vocabulary_number"
                app:layout_constraintStart_toEndOf="@id/ver_guide_30"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_vocabulary_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/tv_score"
                app:layout_constraintStart_toEndOf="@id/ver_guide_30"
                app:layout_constraintTop_toBottomOf="@+id/tv_lesson_name" />

            <TextView
                android:id="@+id/tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/lesson_item_tv_score_padding_end"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ver_guide_30"
                app:layout_constraintTop_toBottomOf="@+id/tv_vocabulary_number"
                tools:ignore="RtlSymmetry" />

            <ProgressBar
                android:id="@+id/pb_score"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="@dimen/lesson_item_pb_height"
                app:layout_constraintBottom_toBottomOf="@id/tv_score"
                app:layout_constraintEnd_toStartOf="@+id/ver_guide_90"
                app:layout_constraintStart_toEndOf="@id/tv_score" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/ver_guide_25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.25" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/ver_guide_30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.3" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/ver_guide_90"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.9" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/hor_guide_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.1" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/hor_guide_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.9" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
